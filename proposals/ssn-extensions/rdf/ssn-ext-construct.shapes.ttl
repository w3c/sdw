  sh:prefixes sosa: ;
  sh:prefixes ssn-ext: ;
.
ssn-shacl:ptime
  rdf:type sh:SPARQLRule ;
  sh:construct """CONSTRUCT {
    ?this sosa:phenomenonTime ?pt .
}
WHERE {
    ?oc ssn-ext:hasMember ?this .
    ?oc sosa:phenomenonTime ?pt .
    NOT EXISTS {
        ?this sosa:phenomenonTime ?x .
    } .
}""" ;
  sh:prefixes sosa: ;
  sh:prefixes ssn-ext: ;
.
ssn-shacl:rtime
